{
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@0.7.3"
    }
  },
  "routes": [
    { "src": "/", "dest": "/api/index.php" }
  ],
  "headers": [
    {
      "source": "/api/*",
      "headers": [
        {
          "key": "Set-Cookie",
          "value": "SameSite=None; Secure; HttpOnly"
        }
      ]
    }
  ]
}
